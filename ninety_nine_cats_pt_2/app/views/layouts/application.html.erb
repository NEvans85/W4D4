<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <% if logged_in? %>
      <% button_name = 'Log Out' %>
      <% action_url = sessions_url %>
      <% action = :delete %>
    <% else %>
      <% button_name = 'Log In' %>
      <% action_url = new_sessions_url %>
      <% action = :get %>
    <% end %>

    <header>
      <% if logged_in? %>
        <h3>Hello <%= current_user.username %></h3>
      <% end %>
      <%= button_to button_name, action_url, method: action %>
    </header>
    <%= yield %>
  </body>
</html>
